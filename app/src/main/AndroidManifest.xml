<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.example.marko.blagajnapp">

    <application
        android:name=".BlagajnApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.LoginActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.AdminActivity"
                  android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".ui.NoviDjelatnikActivity"
                  android:screenOrientation="portrait" />

        <activity android:name=".ui.NovaKategorijaActivity"
                  android:screenOrientation="portrait" />

        <activity android:name=".ui.NoviArtiklActivity"
                  android:screenOrientation="portrait" />

    </application>

</manifest>