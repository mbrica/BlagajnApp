<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRacun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bgToolbar"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvRacun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:id="@+id/rlRacun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRacun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNaslov"
                tools:text="racunId"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvVrijeme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRacun"
                tools:text="vrijeme"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvDjelatnik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVrijeme"
                tools:text="djelatnik"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/ivLine1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dashed_line"
                android:layout_below="@+id/tvDjelatnik"
                android:layerType="software"/>

            <TextView
                android:id="@+id/tvStavke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLine1"
                tools:text="stavke"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/ivLine2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dashed_line"
                android:layout_below="@+id/tvStavke"
                android:layerType="software"/>

            <TextView
                android:id="@+id/tvUkupno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLine2"
                tools:text="Ukupno:"
                android:textColor="#000000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>