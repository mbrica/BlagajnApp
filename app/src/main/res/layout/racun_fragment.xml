<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bgRacunFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNaziv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvNazivText"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvKolicina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvKolicinaText"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvCijena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvCijenaText"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvIznos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvIznosText"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRacun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:layout_above="@+id/tvUkupno"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvUkupno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="95dp"
        android:text="@string/tvUkupnoText" />

    <TextView
        android:id="@+id/tvUkupnoCijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvUkupno"
        android:layout_marginEnd="31dp"
        tools:text="sdfsdsdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOdustani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#FF0000"
            android:text="@string/btnOdustaniText" />

        <Button
            android:id="@+id/btnSpremi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="#47D147"
            android:text="@string/btnSpremiText" />
    </LinearLayout>

</RelativeLayout>